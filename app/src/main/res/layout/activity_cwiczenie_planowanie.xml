<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cwiczenie_planowanie"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2e3237"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.trener.activity.CwiczeniePlanowanieActivity">

    <EditText
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="10dp"
        android:background="@color/input_register_bg"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText4"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="100dp"
        android:text="0" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="10dp"
        android:background="@color/input_register_bg"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText11"
        android:layout_alignBottom="@+id/tvCiezar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0" />

    <TextView
        android:text="Ciężar:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvCiezar"
        android:textSize="24sp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/tvDyst"
        android:layout_alignLeft="@+id/tvDyst"
        android:layout_alignStart="@+id/tvDyst"
        android:textColor="@color/white" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/input_register_bg"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editText10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number"
        android:text="0" />

    <TextView
        android:text="Powtórzenia:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvPowt"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/editText10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/editText10"
        android:layout_toStartOf="@+id/editText10" />

    <EditText
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:padding="10dp"
        android:background="@color/input_register_bg"
        android:textColor="@color/white"
        android:ems="10"
        android:id="@+id/editText10"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="0" />

    <TextView
                android:text="Serie:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvSerie"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:layout_alignBottom="@+id/editText4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Dystans:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvDyst"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/editText3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/white" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCiezar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="43dp"
        android:id="@+id/ll1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:text="Ćwiczenie: "
            android:textSize="20sp"
            android:textColor="@color/white" />

        <TextView
            android:text="Trening: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll1"
            android:layout_alignRight="@+id/tvSerie"
            android:layout_alignEnd="@+id/tvSerie"
            android:id="@+id/textView6"
            android:textSize="30sp" />


    </LinearLayout>
    <Button
        android:text="ZAPLANUJ ĆWICZENIE"
        android:layout_below="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ea4c88"
        android:id="@+id/btnZaplanuj"
        android:textColor="@color/white" />



</RelativeLayout>
